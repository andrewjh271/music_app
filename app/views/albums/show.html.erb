<h3><%= @album.title %></h3>

<section>
  <p>Band: <%= @album.band_name %>
  <p>Year: <%= @album.year %></p>
  <p><%= @album.live ? 'Live Album' : 'Studio Album' %></p>
</section>

<ol>
  <% @album.tracks.each do |track| %>
    <li><%= link_to track.title, track_url(track) %></li>
  <% end %>
</ol>

<div >
  <%= button_to 'Add a Track', new_album_track_path(@album), method: :get %>
  <%= button_to 'Update Album', edit_album_path(@album), method: :get %>
  <%= button_to 'Delete Album', album_path, method: :delete %>
</div>