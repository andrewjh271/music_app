<h3> <%= @track.title %> </h3>

<section>
  <p>Track number: <%= @track.ord %>
  <p>Album: <%= @track.album_title %>
  <p>Band: <%= @track.band_name %>
  <p><%= @track.bonus ? 'Bonus Track' : 'Regular Track' %></p>
</section>

<% if @track.lyrics %>
  <section>
    <p>Lyrics:</p>
    <%#= lyrics_display(@track.lyrics) %>
    <%= ugly_lyrics(@track.lyrics) %>
  </section>
  <br>
<% end %>

<section>
<p>Notes:</p>
<% @track.notes.each do |note| %>
  <li><%= render note %></li>
<% end %>
<br>

<%= render 'notes/form', track_id: @track.id %>

<%= button_to 'Back to Album', album_path(@track.album_id), method: :get %>
<%= button_to 'Update Track', edit_track_path(@track), method: :get %>
<%= button_to 'Delete Track', track_path, method: :delete %>