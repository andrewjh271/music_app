<% action = login ? session_path : users_path %>
<% submit = login ? 'Login' : 'Create Account' %>

<form action='<%= action %>' method='POST'>
  <%= auth_token %>

  <div class='form-item'>
    <label for='email'>Email: </label>
    <input type='text'
           id='email'
           name='user[email]'
           value='<%= @user.email %>'>
  </div>
  <br>

  <div class='form-item'>
    <label for='password'>Password: </label>
    <input type='password'
           id='password'
           name='user[password]'
           value='<%= @user.password %>'>
  </div>
  <br>
  <br>

  <input type='submit' value='<%= submit %>'>
</form>